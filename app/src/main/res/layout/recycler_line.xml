<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/notaTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="TÃ­tulo" />

        <TextView
            android:id="@+id/notaConteudo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="opsijdf"
            android:layout_below="@+id/apagarBtn"
            android:layout_marginHorizontal="12dp"/>

        <TextView
            android:id="@+id/notaData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10/10/10"
            android:layout_alignLeft="@+id/editarBtn"
            android:layout_alignRight="@+id/apagarBtn"
            android:gravity="center"
            android:layout_below="@+id/apagarBtn"/>

    <ImageButton
        android:id="@+id/apagarBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#F81400"
        android:src="@drawable/ic_baseline_delete_24"
        android:layout_alignParentRight="true"/>

    <ImageButton
        android:id="@+id/editarBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#2196F3"
        android:src="@drawable/ic_baseline_edit_24"
        android:layout_toLeftOf="@+id/apagarBtn"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_below="@+id/notaConteudo"
        android:layout_marginHorizontal="12dp"
        android:layout_marginVertical="5dp"
        />
</RelativeLayout>